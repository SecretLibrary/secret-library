{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "types": [
      "@types/node",
      "@types/express",
      "@types/morgan",
      "@types/jest",
      "@types/passport",
      "@types/passport-local",
      "@types/passport-jwt",
      "@types/bcrypt",
      "@types/jsonwebtoken"
    ],
    "typeRoots": ["./node_modules/@types", "./src/declarations"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    ".nuxt",
    "dist"
  ]
}
